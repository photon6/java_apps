{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "./mvnw",
            "args": [
                "clean",
                "install"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./mvnw",
            "args": [
                "spring-boot:run"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}